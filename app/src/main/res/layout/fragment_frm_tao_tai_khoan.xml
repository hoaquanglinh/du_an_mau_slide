<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.frm_tao_tai_khoan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản"
            android:textSize="25dp"
            android:textColor="#E53935"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/edMaTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Nhập mã thủ thư"/>

        <EditText
            android:id="@+id/edHoTenTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Nhập họ tên"/>

        <EditText
            android:id="@+id/edPasswordTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Nhập lại mật khẩu"/>

        <EditText
            android:id="@+id/edRePasswordTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Nhập lại mật khẩu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSaveTT"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:text="Save"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelSaveTT"
                android:layout_marginLeft="15dp"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:text="Hủy"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>