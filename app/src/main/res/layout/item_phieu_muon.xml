<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
        android:id="@+id/edMaPM"
        android:hint="Mã phiếu mượn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spnThanhVien"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <Spinner
        android:layout_marginTop="5dp"
        android:id="@+id/spnSach"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/addngaythue"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Ngày thuê:"
            android:textSize="20dp"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tvNgay"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="dd/MM/yyyy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Tiền thuê:"/>
        <TextView
            android:id="@+id/tvTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_marginLeft="20dp"
            android:id="@+id/chkTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/addtrangthai"
            android:layout_marginLeft="15dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="Đã trả sách"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSavePM"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1E88E5"
            android:text="Thêm"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnCancelPM"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#1E88E5"
            android:text="Hủy"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>